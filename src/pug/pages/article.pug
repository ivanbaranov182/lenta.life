          .article-content__bottom-tags
            +news-tag('#здоровье', '_grey')
            +news-tag('#здоровье', '_grey')
            +news-tag('#здоровье', '_grey')
          .article-content__bottom-soc
            picture
              source(srcset='assets/img/article-socials.png.webp', type='image/webp')
              img(src='assets/img/article-socials.png', alt='')

